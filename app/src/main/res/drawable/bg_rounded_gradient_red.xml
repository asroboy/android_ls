<?xml version="1.0" encoding="utf-8"?><!--  res/drawable/rounded_edittext.xml -->

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>

        <shape
            android:padding="10dp"
            android:shape="rectangle">
            <gradient
                android:centerColor="#FD3434"
                android:centerX="70%"
                android:centerY="130%"
                android:endColor="#CF3939"
                android:gradientRadius="1300"
                android:startColor="#F79090"
                android:type="radial" />
            <padding
                android:bottom="0dp"
                android:left="0dp"
                android:right="0dp"
                android:top="0dp" />
            <corners
                android:bottomLeftRadius="20dp"
                android:bottomRightRadius="20dp"
                android:topLeftRadius="20dp"
                android:topRightRadius="20dp"></corners>
        </shape>
    </item>

</layer-list>
